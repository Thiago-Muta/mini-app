<div align="center">
  <h1>Edit Taks</h1>
  <div class='form-group align-item-center container border'>
    <%= form_for @task do |f| %>
    
      <div class='row'>
        <p class='col-4'></p>
          <div class='col-4 text-center' >
            <%= f.label :title, 'Title' %>
            <%= f.text_field :title, class: 'form-control mb-2', placeholder: 'title'%>
          </div>
      </div>

      <div class='row'>
        <p class='col-4'></p>
          <div class='col-4' align='center'>
            <%= f.label :description, 'Description' %>
            <%= f.text_field :description, class: 'form-control mb-2', placeholder: 'Your description'%>
          </div>
      </div>

      <div class='form-group'>
        <strong class='text-center'><%= f.label :status, 'Change Status:' %></strong>
        <%= f.select(:status, [['complete', complete: 10], ['incomplete', incomplete: 0]]) %>
      </div>

      <div class="text-btn w-100 mt-4">
        <%= f.hidden_field :id, value: params[:id]%>
        <%= f.submit class: "btn btn-primary btn-lg"%>
      </div>

    <% end %>
  </div>
</div>
